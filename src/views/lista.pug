extends ./plantilla
block content
  h1(class="text-center text-5xl font-bold py-8") Lista de los Hoteles
  a(href="/form-hotel", class="bg-sky-600 py-3 px-5 rounded hover:bg-sky-700 transition-colors duration-300") Agregar Hotel
  div(class="py-11")
    ul(class="grid xl:grid-cols-4 md:grid-cols-2 lg:grid-cols-3 grid-cols-1 gap-4")
      each val in listaHotel
        li(class="bg-slate-200 py-4 px-3 rounded text-gray-900 grid space-y-4")
          p(class="font-bold text-3xl text-center")=val.nombre
          img(src=val.image, alt="", class="object-cover bg-cover w-full h-44 rounded")
          div 
            p(class="font-bold leading-4") Descripci√≥n:
            p(class="h-20 leading-5 overflow-hidden text-ellipsis")= val.descripcion
          div(class="flex gap-2")
            form(action=`/form-hotel/${val.id}`, method="get") 
              input(type="submit", value="Editar", class="bg-yellow-400 border border-yellow-500 basic-button hover:bg-yellow-500")
            form(action=`/delete/${val.id}`, method="post") 
              input(type="submit", value="Eliminar", class="bg-red-400 border border-red-500 basic-button hover:bg-red-500")